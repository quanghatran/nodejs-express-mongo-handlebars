<div class="mt-4">
	<h3>Edit Course</h3>
	<form method="POST" action="/course/{{course._id}}?_method=PUT">
		<div class="form-group">
			<label for="name">Name Course</label>
			<input
				type="text"
				class="form-control"
				value="{{course.name}}"
				id="name"
				name="name"
			/>
			<label for="description">Detail</label>
			<textarea
				class="form-control"
				id="description"
				name="description"
			>{{course.description}}</textarea>
			<label for="videoId">Id Video YouTube</label>
			<input
				type="text"
				class="form-control"
				value="{{course.videoId}}"
				id="videoId"
				name="videoId"
			/>
			<label for="level">Level</label>
			<input
				type="text"
				class="form-control"
				value="{{course.level}}"
				id="level"
				name="level"
			/>

		</div>

		<button type="submit" class="btn btn-primary">Save change</button>
	</form>
</div>